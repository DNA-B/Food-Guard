<div class="flex flex-col items-center min-h-[60vh] py-10 w-full">
  <h1 class="text-3xl font-bold text-indigo-700 mb-10">게시물 목록</h1>
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 w-full max-w-7xl mb-10">
    <% posts.forEach(post => { %>
    <div class="bg-gradient-to-br from-purple-50 to-pink-100 shadow-lg rounded-2xl p-6 hover:shadow-xl transition-all duration-300 hover:scale-105 border border-purple-200">
      <span class="text-lg font-semibold text-gray-800 line-clamp-2 block"><%= post.title %></span>
      <span class="text-gray-600 text-sm mt-2 line-clamp-2 block"><%= post.content.substr(0, 20) %></span>
      <a href="/posts/<%= post._id %>" class="mt-4 px-4 py-2 bg-purple-500 text-white rounded-lg hover:bg-purple-600 font-semibold transition text-sm inline-block">상세보기</a>
    </div>
    <% }); %>
  </div>
  <a href="/posts/create" class="px-6 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 font-semibold transition text-base">게시물 추가</a>
</div>