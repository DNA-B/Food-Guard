<div class="flex flex-col items-center min-h-[60vh]">
  <h1 class="text-3xl font-bold text-green-700 mb-6">게시물 목록</h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 w-full max-w-2xl mb-8">
    <% postList.forEach(post => { %>
    <div
      class="bg-white shadow rounded-lg p-8 flex items-center justify-between gap-4"
    >
      <span class="text-lg font-medium text-gray-800"><%= post.title %></span>
      <a
        href="/posts/<%= post._id %>"
        class="px-4 py-2 bg-indigo-500 text-white rounded hover:bg-indigo-600 font-semibold transition"
        >상세보기</a
      >
    </div>
    <% }); %>
  </div>
  <a
    href="/posts/create"
    class="px-6 py-2 bg-green-500 text-white rounded hover:bg-green-600 font-semibold transition"
    >게시물 추가</a
  >
</div>
