<div class="flex flex-col items-center min-h-[60vh] py-8">
  <div class="bg-white shadow-lg rounded-xl p-8 w-full max-w-2xl">
    <h1 class="text-3xl font-bold text-indigo-700 mb-8"><%= post.title %></h1>
    <div class="space-y-2 mb-6">
      <p class="text-gray-700">
        <span class="font-semibold">내용</span> : <%= post.content %>
      </p>
      <p class="text-gray-700">
        <span class="font-semibold">작성자</span> : <%= author %>
      </p>
    </div>
    <hr class="mb-6" />
    <div class="flex gap-2">
      <% if (isAuthor) { %>
      <form action="/posts/<%= post._id %>/edit" method="GET" class="w-full">
        <button type="submit" class="w-full px-4 py-2 rounded bg-blue-500 hover:bg-blue-600 text-white font-semibold transition">
          수정
        </button>
      </form>
      <form action="/posts/<%= post._id %>/?_method=DELETE" method="POST" class="w-full" id="delete-form" onsubmit="return confirm('정말 삭제하시겠습니까?')">
        <button type="submit" class="w-full px-4 py-2 rounded bg-red-500 hover:bg-red-600 text-white font-semibold transition">
          삭제
        </button>
      </form>
      <% } %>
    </div>
  </div>
</div>