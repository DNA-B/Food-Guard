<div class="flex flex-col items-center min-h-[60vh] py-10 w-full">
  <div class="bg-gradient-to-br from-purple-50 to-pink-100 shadow-lg rounded-2xl p-10 w-full max-w-4xl border border-purple-200">
    <h1 class="text-4xl font-bold text-purple-700 mb-2 line-clamp-2"><%= post.title %></h1>
    <div class="font-medium text-gray-600 mb-6 text-sm"><%= post.createdAt ? post.createdAt.toISOString().split('T')[0] : '' %></div>
    <div class="space-y-4 mb-8">
      <div class="mb-10 w-full flex justify-center bg-gray-50 rounded-lg overflow-hidden border border-gray-200 py-8">
        <% if (post.image.url && post.image.filename) { %>
        <% if (post.image.url === "uploading") { %>
        <div class="w-full py-24 flex flex-col items-center justify-center text-gray-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 mb-3 animate-spin" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          <p class="text-lg">이미지 업로드 중입니다.</p>
        </div>
        <% } else { %>
        <img src="<%= post.image.url %>" alt="<%= post.title %>" class="max-w-full h-auto max-h-[500px] object-contain shadow-sm">
        <% } %>
        <% } else { %>
        <div class="w-full py-24 flex flex-col items-center justify-center text-gray-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <p class="text-lg">등록된 사진이 없습니다.</p>
        </div>
        <% } %>
      </div>
      <p class="text-gray-700 text-lg">
        <span class="font-bold">내용</span>: <%= post.content %>
      </p>
      <p class="text-gray-700 text-lg">
        <span class="font-bold">작성자</span>: <%= author %>
      </p>
    </div>
    <hr class="mb-8" />
    <div class="flex gap-4">
      <% if (isAuthor) { %>
      <form action="/posts/<%= post._id %>/edit" method="GET" class="flex-1">
        <button type="submit" class="w-full px-6 py-4 rounded-lg bg-blue-500 hover:bg-blue-600 text-white font-semibold transition text-lg">
          수정
        </button>
      </form>
      <form action="/posts/<%= post._id %>/?_method=DELETE" method="POST" class="flex-1" id="delete-form" onsubmit="return confirm('정말 삭제하시겠습니까?')">
        <button type="submit" class="w-full px-6 py-4 rounded-lg bg-red-500 hover:bg-red-600 text-white font-semibold transition text-lg">
          삭제
        </button>
      </form>
      <% } %>
    </div>
  </div>
  <div class="bg-gradient-to-br from-purple-50 to-pink-100 shadow-lg rounded-2xl p-6 w-full max-w-4xl mt-8 border border-purple-200">
    <form action="/posts/<%= post._id %>/comments" method="POST" id="comment-form" class="flex gap-3">
      <input type="text" id="comment-content" name="comment-content" placeholder="댓글을 입력하세요..." class="flex-1 p-3 border border-purple-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent text-base">
      <button type="submit" class="px-6 py-3 bg-purple-500 hover:bg-purple-600 text-white rounded-lg transition-colors duration-200 font-semibold text-base">
        등록
      </button>
    </form>
  </div>
  <div class="bg-gradient-to-br from-purple-50 to-pink-100 shadow-lg rounded-2xl p-6 w-full max-w-4xl mt-8 border border-purple-200">
    <h2 class="text-2xl font-bold text-purple-700 mb-6 flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
      </svg>
      댓글
    </h2>
    <% if (comments && comments.length > 0) { %>
    <% comments.filter(c => !c.parentComment).forEach(comment => { %>
    <div class="mb-6 p-5 bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow border border-purple-100">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center">
          <% if (post.author._id.equals(comment.author._id)) { %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
          </svg>
          <p class="font-bold text-orange-600 text-sm">작성자</p>
          <% } else { %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <p class="font-semibold text-gray-700 text-sm"><%= comment.author.username %></p>
          <% } %>
        </div>
        <% if (comment.author._id.equals(userId) && comment.status === "published") { %>
        <form action="/posts/<%= post._id %>/comments/<%= comment._id %>/?_method=DELETE" method="POST" class="inline" onsubmit="return confirm('정말 삭제하시겠습니까?')">
          <button type="submit" class="px-3 py-1 text-xs bg-red-500 hover:bg-red-600 text-white rounded-full transition-colors duration-200 font-semibold">
            삭제
          </button>
        </form>
        <% } %>
      </div>
      <% if (comment.status === "deleted") { %>
      <p class="text-gray-500 italic text-sm">삭제된 댓글입니다.</p>
      <% } else { %>
      <p class="text-gray-800 mb-3 text-base"><%= comment.content %></p>
      <% } %>
      <form action="/posts/<%= post._id %>/comments/<%= comment._id %>/reply" method="POST" class="flex gap-2">
        <input type="text" name="comment-content" placeholder="답글 달기" class="flex-1 p-2 border border-purple-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent text-sm">
        <button type="submit" class="px-4 py-2 bg-purple-500 hover:bg-purple-600 text-white rounded-lg transition-colors duration-200 font-semibold text-sm">
          답글
        </button>
      </form>
      <% comments.filter(c => c.parentComment && c.parentComment.equals(comment._id)).forEach(reply => { %>
      <div class="ml-8 mt-3 p-3 bg-white rounded-lg border-l-4 border-purple-300 shadow-sm">
        <div class="flex items-center justify-between mb-2">
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            <% if (post.author._id.equals(reply.author._id)) { %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
            </svg>
            <p class="font-bold text-orange-600 text-xs">작성자</p>
            <% } else { %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <p class="font-semibold text-gray-700 text-xs"><%= reply.author.username %></p>
            <% } %>
          </div>
          <% if (reply.author._id.equals(userId) && reply.status === "published") { %>
          <form action="/posts/<%= post._id %>/comments/<%= reply._id %>/?_method=DELETE" method="POST" class="inline" onsubmit="return confirm('정말 삭제하시겠습니까?')">
            <button type="submit" class="px-2 py-1 text-xs bg-red-500 hover:bg-red-600 text-white rounded-full transition-colors duration-200">
              삭제
            </button>
          </form>
          <% } %>
        </div>
        <% if (reply.status === "deleted") { %>
        <p class="text-gray-500 italic text-xs">삭제된 댓글입니다.</p>
        <% } else { %>
        <p class="text-gray-800 text-xs"><%= reply.content %></p>
        <% } %>
      </div>
      <% }); %>
    </div>
    <% }); %>
    <% } else { %>
    <div class="text-center py-6">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mx-auto mb-3 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
      </svg>
      <p class="text-gray-400 text-sm">댓글이 없습니다.</p>
    </div>
    <% } %>
  </div>
</div>