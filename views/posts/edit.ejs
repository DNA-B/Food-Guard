<div class="flex flex-col items-center min-h-[60vh] py-8">
  <div class="bg-white shadow-lg rounded-xl p-8 w-full max-w-xl">
    <h1 class="text-3xl font-bold text-indigo-700 mb-8">게시물 수정</h1>
    <form action="/posts/<%= post._id %>/edit/?_method=PUT" method="POST" enctype="multipart/form-data" class="space-y-4">
      <div>
        <label for="title" class="block text-gray-700 font-medium mb-1">제목</label>
        <input type="text" id="title" name="title" value="<%= post.title %>" required class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-400" />
      </div>
      <div>
        <label for="content" class="block text-gray-700 font-medium mb-1">내용</label>
        <textarea id="content" name="content" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-400">
<%= post.content %></textarea>
      </div>
      <div>
        <label for="image" class="block text-gray-700 font-medium mb-2">사진 업로드</label>
        <div class="mb-2">
          <% if (post.image.url && post.image.filename) { %>
          <img id="preview" src="<%= post.image.url %>" alt="이미지 미리보기" class="max-h-48 rounded" />
          <% } else { %>
          <img id="preview" src="" alt="이미지 미리보기" style="display:none" class="max-h-48 rounded" />
          <% } %>
        </div>
        <input type="file" id="image" name="image" accept="image/*" class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-green-400" />
        <p id="upload-alert" class="text-sm text-gray-500 mt-1">이미지 파일만 업로드 가능합니다.</p>
      </div>
      <div class="flex gap-2 mt-6">
        <button type="submit" class="w-full px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-500 font-semibold transition">
          수정하기
        </button>
        <button type="button" onclick="history.back()" class="w-full px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 font-semibold transition">
          취소하기
        </button>
      </div>
    </form>
  </div>
</div>

<script>
  const fileInput = document.getElementById('image');
  const preview = document.getElementById('preview');

  fileInput.addEventListener('change', function(e) {
    const file = e.target.files && e.target.files[0];

    if (!file)
      return;

    const reader = new FileReader();
    reader.onload = function(ev) {
      preview.src = ev.target.result;
      preview.style.display = 'block';
    };
    reader.readAsDataURL(file);
  });
</script>