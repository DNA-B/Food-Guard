<div class="flex flex-col items-center min-h-[60vh] py-10 w-full">
  <div class="bg-gradient-to-br from-orange-50 to-red-100 shadow-lg rounded-2xl p-10 w-full max-w-4xl border border-orange-200">
    <h1 class="text-4xl font-bold text-orange-700 mb-2 line-clamp-2"><%= donation.title %></h1>
    <div class="font-medium text-gray-600 mb-6 text-sm"><%= donation.createdAt ? donation.createdAt.toISOString().split('T')[0] : '' %></div>
    <div class="mb-8 w-full flex justify-center bg-white rounded-lg overflow-hidden border border-orange-200 py-4">
      <% if (donation.food.image && donation.food.image.url) { %>
      <img src="<%= donation.food.image.url %>" alt="<%= donation.food.name %>" class="max-w-full h-auto max-h-[400px] object-contain shadow-sm">
      <% } else { %>
      <div class="w-full py-16 flex flex-col items-center justify-center text-gray-400">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <p class="text-base">등록된 사진이 없습니다.</p>
      </div>
      <% } %>
    </div>
    <div class="space-y-3 mb-6">
      <p class="text-gray-700 text-base">
        <span class="font-bold">내용</span>: <%= donation.content %>
      </p>
      <p class="text-gray-700 text-base">
        <span class="font-bold">작성자</span>: <%= author %>
      </p>
    </div>
    <hr class="mb-6">
    <div class="space-y-3 mb-6">
      <p class="text-gray-700 text-base">
        <span class="font-bold">음식 이름</span>: <%= donation.food.name %>
      </p>
      <p class="text-gray-700 text-base">
        <span class="font-bold">음식 설명</span>: <%= donation.food.description %>
      </p>
      <p class="text-gray-700 text-base">
        <span class="font-bold">유통기한</span>: <%= donation.food.expiryAt ? donation.food.expiryAt.toISOString().split('T')[0] : '' %>
      </p>
    </div>
    <hr class="mb-6" />
    <% if (isAuthor) { %>
    <div class="flex gap-3">
      <form action="/donations/<%= donation._id %>/edit" method="GET" class="flex-1">
        <button type="submit" class="w-full px-6 py-3 rounded-lg bg-blue-500 hover:bg-blue-600 text-white font-semibold transition text-base">
          수정
        </button>
      </form>
      <form action="/donations/<%= donation._id %>/?_method=DELETE" method="POST" class="flex-1" onsubmit="return confirm('정말 삭제하시겠습니까?')">
        <button type="submit" class="w-full px-6 py-3 rounded-lg bg-red-500 hover:bg-red-600 text-white font-semibold transition text-base">
          삭제
        </button>
      </form>
    </div>
    <% } else { %>
    <div class="flex gap-3">
      <button type="button" onclick="confirmAndChat()" class="flex-1 px-6 py-3 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white font-semibold transition text-base">
        채팅하기
      </button>
    </div>
    <form id="startChatForm" action="/donations/<%= donation._id %>/chats" method="POST" style="display: none;\"></form>
    <% } %>
  </div>
</div>

<script>
  function confirmAndChat() {
    if (confirm("작성자와 채팅을 시작하시겠습니까?")) {
      document.getElementById('startChatForm').submit();
    }
  }
</script>