<div class="flex flex-col items-center min-h-[60vh] py-8">
  <div class="bg-white shadow-lg rounded-xl p-10 w-full max-w-xl">
    <h1 class="text-3xl font-bold text-indigo-700 mb-8">
      나눔하기
    </h1>
    <form action="/donations/create" method="POST" class="space-y-6">
      <div>
        <label for="title" class="block text-gray-700 font-medium mb-2">제목</label>
        <input type="text" id="title" name="title" required class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-green-400 text-lg" />
      </div>
      <div>
        <label for="content" class="block text-gray-700 font-medium mb-2">설명</label>
        <textarea id="content" name="content" class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-green-400 text-lg"></textarea>
      </div>
      <div>
        <label for="foodId" class="block text-gray-700 font-medium mb-2">음식 선택</label>
        <select id="foodId" name="foodId" class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-green-400 text-lg">
          <option disabled>음식을 선택하세요</option>
          <% if (Array.isArray(foods) !== 'undefined' && foods.length > 0) { %>
          <% foods.forEach(function(food) { %>
          <option value="<%= food._id %>">
            <%= food.name %>
          </option>
          <% }); %>
          <% } %>
        </select>
      </div>
      <div class="flex gap-4 mt-8">
        <button type="submit" class="w-full px-5 py-3 bg-green-600 text-white rounded hover:bg-green-500 font-semibold transition text-lg">
          추가하기
        </button>
        <button type="button" onclick="history.back()" class="w-full px-5 py-3 bg-gray-200 text-gray-700 rounded text-center hover:bg-gray-300 font-semibold transition text-lg">
          취소
        </button>
      </div>
    </form>
  </div>
</div>