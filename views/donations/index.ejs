<div class="flex flex-col items-center min-h-[60vh] py-10 w-full">
  <h1 class="text-3xl font-bold text-indigo-700 mb-10">나눔 목록</h1>

  <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 w-full max-w-7xl mb-10">
    <% donations.forEach(donation => { %>
    <div class="bg-gradient-to-br from-orange-50 to-red-100 shadow-lg rounded-2xl p-6 hover:shadow-xl transition-all duration-300 hover:scale-105 border border-orange-200">
      <span class="text-lg font-semibold text-gray-800 line-clamp-2 block"><%= donation.title %></span>
      <span class="text-gray-600 text-sm mt-2 line-clamp-2 block"><%= donation.content.substr(0, 20) %></span>
      <a href="/donations/<%= donation._id %>" class="mt-4 px-4 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600 font-semibold transition text-sm inline-block">상세보기</a>
    </div>
    <% }); %>
  </div>

  <div class="flex gap-6">
    <a href="/donations/create" class="px-6 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600 font-semibold transition text-base">
      나눔하기
    </a>
    <a href="/donations/chats" class="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-semibold transition text-base">
      채팅 목록
    </a>
  </div>
</div>