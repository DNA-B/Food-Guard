<div class="flex flex-col items-center min-h-[60vh] py-8">
  <h1 class="text-3xl font-bold text-indigo-700 mb-8">나눔 목록</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 w-full max-w-4xl mb-8">
    <% donations.forEach(donation => { %>
    <div class="bg-white shadow-lg rounded-xl p-8 flex flex-col gap-4 hover:shadow-xl transition-shadow">
      <span class="text-lg font-medium text-gray-800"><%= donation.title %></span>
      <span class="text-gray-500"><%= donation.content.substr(0, 10) %></span>
      <a href="/donations/<%= donation._id %>" class="px-4 py-2 bg-indigo-500 text-white rounded hover:bg-indigo-600 font-semibold transition self-start">상세보기</a>
    </div>
    <% }); %>
  </div>

  <div class="flex gap-4">
    <a href="/donations/create" class="px-6 py-2 bg-green-500 text-white rounded hover:bg-green-600 font-semibold transition shadow-md">
      나눔하기
    </a>
    <a href="/donations/chatList" class="px-6 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 font-semibold transition shadow-md">
      채팅 목록
    </a>
  </div>
</div>