<div class="flex flex-col items-center min-h-[60vh] p-4">
  <div class="w-full max-w-4xl">
    <h1 class="text-3xl font-bold text-green-700 mb-6 text-center">
      그룹 멤버 목록
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% userList.forEach(user => { %>
      <div
        class="bg-white shadow-lg rounded-lg p-6 hover:shadow-xl transition-shadow duration-200"
      >
        <div class="flex flex-col items-center">
          <div
            class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-4"
          >
            <span class="text-2xl text-green-600 font-bold">
              <%= user.nickname ? user.nickname.charAt(0).toUpperCase() : '?' %>
            </span>
          </div>
          <h2 class="text-xl font-semibold text-gray-800 mb-2">
            <%= user.nickname %>
          </h2>
          <p class="text-gray-600 text-sm"><%= user.email %></p>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</div>
