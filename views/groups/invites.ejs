<div class="flex flex-col items-center min-h-[60vh] py-8">
  <h1 class="text-3xl font-bold text-indigo-700 mb-8">초대 목록</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 w-full max-w-2xl mb-8">  
      <% invites.forEach(invite => { %>
        <div class="bg-white shadow rounded-lg p-8 flex items-center justify-between gap-4">
          <span class="text-xl font-semibold text-gray-800"><%= invite.group.name %></span>

          <form action="/groups/<%= invite.group._id %>/invites/<%= invite._id %>/accept" method="POST" class="flex-1">
            <button type="submit"
                    class="px-6 py-2 bg-green-500 text-white rounded hover:bg-green-600 font-semibold transition">
              수락
            </button>
          </form>

          <form action="/groups/<%= invite.group._id %>/invites/<%= invite._id %>/reject" method="POST" class="flex-1">
            <button type="submit"
                    class="px-6 py-2 bg-red-500 text-white rounded hover:bg-red-600 font-semibold transition">
              거절
            </button>
          </form>
        </div>
    <% }); %>
    </div>
</div>
