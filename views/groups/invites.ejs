<div class="flex flex-col items-center min-h-[60vh] py-10 w-full">
  <h1 class="text-3xl font-bold text-indigo-700 mb-10">초대 목록</h1>
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 w-full max-w-7xl mb-10">
    <% invites.forEach(invite => { %>
    <div class="bg-gradient-to-br from-purple-50 to-pink-100 shadow-lg rounded-2xl p-6 flex flex-col items-center gap-3 hover:shadow-xl transition-all duration-300 border border-purple-200">
      <span class="text-lg font-semibold text-gray-800 text-center"><%= invite.group.name %></span>

      <form action="/groups/<%= invite.group._id %>/invites/<%= invite._id %>/accept" method="POST" class="w-full">
        <button type="submit" class="w-full px-6 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 font-semibold transition text-sm">
          수락
        </button>
      </form>

      <form action="/groups/<%= invite.group._id %>/invites/<%= invite._id %>/reject" method="POST" class="w-full">
        <button type="submit" class="w-full px-6 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 font-semibold transition text-sm">
          거절
        </button>
      </form>
    </div>
    <% }); %>
  </div>
</div>