<div class="flex flex-col items-center min-h-[60vh] py-10 w-full">
  <div class="bg-gradient-to-br from-blue-50 to-cyan-100 shadow-lg rounded-2xl p-10 w-full max-w-2xl border border-blue-200">
    <h1 class="text-3xl font-bold text-blue-700 mb-8">그룹 수정</h1>
    <form action="/groups/<%= group._id %>/edit/?_method=PUT" method="POST" class="space-y-6">
      <div>
        <label for="name" class="block text-gray-700 font-semibold mb-2 text-base">이름</label>
        <input type="text" id="name" name="name" value="<%= group.name %>" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 text-base" />
      </div>
      <div>
        <label for="description" class="block text-gray-700 font-semibold mb-2 text-base">설명</label>
        <textarea id="description" name="description" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 text-base">
<%= group.description %></textarea>
      </div>
      <div class="flex gap-4 mt-8">
        <button type="submit" class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-500 font-semibold transition text-base">
          수정하기
        </button>
        <a href="/groups" class="flex-1 px-6 py-3 bg-gray-200 text-gray-700 rounded-lg text-center hover:bg-gray-300 font-semibold transition text-base">취소</a>
      </div>
    </form>
  </div>
</div>