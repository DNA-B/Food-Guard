<div class="flex flex-col items-center min-h-[60vh] py-10 w-full">
  <h1 class="text-3xl font-bold text-indigo-700 mb-10">
    <span class="text-green-600"><%= groupName %></span>
    그룹의 음식 목록
  </h1>
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 w-full max-w-7xl mb-10">
    <% foods.forEach(food => { %>
    <div class="bg-gradient-to-br from-green-50 to-emerald-100 shadow-lg rounded-2xl p-6 hover:shadow-xl transition-all duration-300 hover:scale-105 border border-green-200">
      <span class="text-lg font-semibold text-gray-800 line-clamp-2 block"><%= food.name %></span>
      <span class="text-gray-600 text-sm mt-2 line-clamp-2 block"><%= food.description.substr(0, 20) %></span>
      <a href="/foods/<%= food._id %>" class="mt-4 px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 font-semibold transition text-sm inline-block">상세보기</a>
    </div>
    <% }); %>
  </div>
</div>