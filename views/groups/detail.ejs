<div class="group-detail">
  <h1><%= group.name %></h1>
  <p class="description"><b>설명</b> : <%= group.description %></p>
  <hr />

  <div class="actions">
    <a href="/groups" class="btn">목록으로 돌아가기</a><br />
    <a href="/groups/<%= group._id %>/edit" class="btn">수정</a><br />
    <form action="/foods/<%= group._id %>/?_method=DELETE" method="POST">
      <button type="submit" class="btn btn-danger">그룹 나가기</button>
    </form>
  </div>
</div>
