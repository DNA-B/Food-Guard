<div class="flex justify-center items-center min-h-[70vh]">
  <div class="bg-white shadow-lg rounded-xl p-10 w-full max-w-md">
    <h1 class="text-3xl font-bold text-center text-indigo-700 mb-8">로그인</h1>
    <form action="/login" method="POST" class="space-y-6">
      <div>
        <label for="username" class="block text-gray-700 font-medium mb-2"
          >아이디</label
        >
        <input
          type="text"
          id="username"
          name="username"
          required
          class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-400 text-lg"
        />
      </div>
      <div>
        <label for="password" class="block text-gray-700 font-medium mb-2"
          >비밀번호</label
        >
        <input
          type="password"
          id="password"
          name="password"
          required
          class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-400 text-lg"
        />
      </div>
      <div class="flex gap-4 mt-8">
        <button
          type="submit"
          class="w-full px-5 py-3 bg-indigo-600 text-white rounded hover:bg-indigo-500 font-semibold transition text-lg"
        >
          로그인
        </button>
        <a
          href="/"
          class="w-full px-5 py-3 bg-gray-200 text-gray-700 rounded text-center hover:bg-gray-300 font-semibold transition text-lg"
          >취소</a
        >
      </div>
    </form>
  </div>
</div>
