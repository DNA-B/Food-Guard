<div class="flex justify-center items-center min-h-[60vh]">
  <div class="bg-white shadow-lg rounded-xl p-8 w-full max-w-md">
    <h1 class="text-2xl font-bold text-indigo-700 mb-4 text-center">
      <%= food.name %>
    </h1>
    <div class="space-y-2 mb-6">
      <p class="text-gray-700">
        <span class="font-semibold">설명</span> : <%= food.description %>
      </p>
      <p class="text-gray-700">
        <span class="font-semibold">유통기한</span> : <%= food.expiryDate %>
      </p>
      <p class="text-gray-700">
        <span class="font-semibold">그룹</span> : <%= food.group %>
      </p>
      <p class="text-gray-700">
        <span class="font-semibold">유저</span> : <%= food.user %>
      </p>
    </div>
    <hr class="mb-6" />
    <div class="flex gap-2">
      <form action="/foods/<%= food._id %>/edit" method="GET" class="w-full">
        <button
          type="submit"
          class="w-full px-4 py-2 rounded bg-blue-500 hover:bg-blue-600 text-white font-semibold transition"
        >
          수정
        </button>
      </form>
      <form
        action="/foods/<%= food._id %>/?_method=DELETE"
        method="POST"
        class="w-full"
      >
        <button
          type="submit"
          class="w-full px-4 py-2 rounded bg-red-500 hover:bg-red-600 text-white font-semibold transition"
        >
          삭제
        </button>
      </form>
    </div>
  </div>
</div>
