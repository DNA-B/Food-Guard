<div class="flex justify-center items-center min-h-[70vh]">
  <div class="bg-white shadow-lg rounded-xl p-10 w-full max-w-md">
    <h1 class="text-3xl font-bold text-center text-green-700 mb-8">
      새 음식 추가
    </h1>
    <form action="/foods/create" method="POST" class="space-y-6">
      <div>
        <label for="name" class="block text-gray-700 font-medium mb-2"
          >이름</label
        >
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-green-400 text-lg"
        />
      </div>
      <div>
        <label for="description" class="block text-gray-700 font-medium mb-2"
          >설명</label
        >
        <textarea
          id="description"
          name="description"
          class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-green-400 text-lg"
        ></textarea>
      </div>
      <div>
        <label for="expiryAt" class="block text-gray-700 font-medium mb-2"
          >유통기한</label
        >
        <input
          type="date"
          id="expiryAt"
          name="expiryAt"
          class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-green-400 text-lg"
        />
      </div>
      <div>
        <label for="groupId" class="block text-gray-700 font-medium mb-2"
          >그룹 선택</label
        >
        <select
          id="groupId"
          name="groupId"
          class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-green-400 text-lg"
        >
          <option value="notice" disabled selected>그룹을 선택하세요</option>
          <option value="nothing">선택 안 함</option>
          <option value="donate">나눔</option>          
          <% if (Array.isArray(groups) !== 'undefined' && groups.length > 0) { %>
            <% groups.forEach(function(group) { %>
              <option value="<%= group._id %>" 
                <%= (typeof groupId !== 'undefined' && groupId === group._id.toString()) ? 'selected' : '' %>><%= group.name %>
              </option>
            <% }); %>
          <% } %>
        </select>
      </div>
      <div class="flex gap-4 mt-8">
        <button
          type="submit"
          class="w-full px-5 py-3 bg-green-600 text-white rounded hover:bg-green-500 font-semibold transition text-lg"
        >
          추가하기
        </button>
        <button
          type="button"
          onclick="history.back()"
          class="w-full px-5 py-3 bg-gray-200 text-gray-700 rounded text-center hover:bg-gray-300 font-semibold transition text-lg"
        >
          취소
        </button>
      </div>
    </form>
  </div>
</div>
