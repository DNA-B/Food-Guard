<div class="flex flex-col items-center min-h-[60vh] py-8">
  <h1 class="text-3xl font-bold text-indigo-700 mb-8">음식 목록</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 w-full max-w-4xl mb-8">
    <% foodList.forEach(food => { %>
    <div class="bg-white shadow rounded-lg p-8 flex items-center justify-between gap-4">
      <span class="text-lg font-medium text-gray-800"><%= food.name %></span>
      <a href="/foods/<%= food._id %>" class="px-4 py-2 bg-indigo-500 text-white rounded hover:bg-indigo-600 font-semibold transition">상세보기</a>
    </div>
    <% }); %>
  </div>
  <a href="/foods/create" class="px-6 py-2 bg-green-500 text-white rounded hover:bg-green-600 font-semibold transition">새 음식 추가</a>
</div>