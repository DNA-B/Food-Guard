<div class="flex flex-col items-center min-h-[60vh] py-8">
  <h1 class="text-3xl font-bold text-indigo-700 mb-8">
    <span class="text-orange-500"><%= nickname %></span>
    님의 음식 목록
  </h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 w-full max-w-4xl mb-8">
    <% foodList.forEach(food => { %>
    <div class="bg-white shadow-lg rounded-xl p-8 flex flex-col gap-4 hover:shadow-xl transition-shadow">
      <span class="text-lg font-medium text-gray-800"><%= food.name %></span>
      <span class="text-gray-500"><%= food.description.substr(0, 10) %></span>
      <a href="/foods/<%= food._id %>" class="px-4 py-2 bg-indigo-500 text-white rounded hover:bg-indigo-600 font-semibold transition self-start">상세보기</a>
    </div>
    <% }); %>
  </div>
  <a href="/foods/create" class="px-6 py-2 bg-green-500 text-white rounded hover:bg-green-600 font-semibold transition">새 음식 추가</a>
</div>